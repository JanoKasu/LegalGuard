{
    "manifest_version": 3,
    "name": "Legalese Simplifier",
    "description": "Simplify complex legal documents into plain English with ease.",
    "version": "1.0",
    "permissions": [
        "contextMenus",
        "storage",
        "scripting",
        "activeTab",
        "tabs",
        "sidePanel"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "side_panel": {
        "default_path": "html/result.html"
    },
    "background": {
        "service_worker": "scripts/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "scripts/toast.js"
            ],
            "css": [
                "css/toast.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "html/result.html",
                "html/toast.html",
                "css/bulma.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "action": {
        "default_title": "Open Legalese Simplifier"
    },
